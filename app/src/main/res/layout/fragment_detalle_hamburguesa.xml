<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetalleHamburguesaFragment"
    android:layout_gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        style="@style/Theme.plantillaCardHamburguesa">

        <ImageView
            android:id="@+id/tituloImagen"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher_foreground">
        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            style="@style/Theme.DetalleHamburguesa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tituloPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio:"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tituloCalorias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calorias:"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tituloProteinas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proteinas:"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tituloGrasas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grasas:"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:textSize="20sp">

                    <TextView
                        android:id="@+id/detalleNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="20sp"></TextView>

                    <TextView
                        android:id="@+id/detallePrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio"
                        android:textSize="20sp"></TextView>

                    <TextView
                        android:id="@+id/detalleCalorias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calorias"
                        android:textSize="20sp"></TextView>

                    <TextView
                        android:id="@+id/detalleProteinas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proteinas"
                        android:textSize="20sp"></TextView>

                    <TextView
                        android:id="@+id/detalleGrasas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grasas"
                        android:textSize="20sp"></TextView>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>